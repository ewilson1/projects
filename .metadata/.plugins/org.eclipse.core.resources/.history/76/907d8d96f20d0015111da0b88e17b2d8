Titanium.UI.setBackgroundColor("#000");

//Data
var frigates = [{title: "Atron"}, {title: "Imicus"}, {title: "Incursus"}, {title: "Maulus"}, {title: "Novi"}];

var mainWindow = Ti.UI.createWindow({
	backgroundColor: "#f5f5f5"
});

var titleView = Ti.UI.createView({
	height: 65,
	backgroundColor: "#fff",
	top: 0
});

var border = Ti.UI.createView({
	backgroundColor: "#dbdbdb",
	height: 1,
	top: titleView.height + titleView.top
});

var titleLabel = Ti.UI.createLabel({
	text: "Gallente Tech 1 Frigates",
	font: {fontSize: 20, fontFamily: "Arial", fontWeight: "bold"},
	top: 30,
	width: "100%",
	textAlign: "center"
});

var ships = Ti.UI.createTableView({
	top: border.top + border.height
});

if(Ti.Platform.name === "iPhone OS"){
	ships.style = Ti.UI.iPhone.tableViewStyle.GROUPED;
}

ships.setData(frigates);

titleView.add(titleLabel);
mainWindow.add(titleView, border, ships);
mainWindow.open();
