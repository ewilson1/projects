Titanium.UI.setBackgroundImage; "Weather-Background.jpg";

//Data for the table view
var menu = [{title: "Random Weather Images"}, {title: "The Weatherman's Family"}, {title: "Interactive Weather"}];

var mainWindow = Ti.UI.createWindow({
	title: "Eric Wilson's Weather Menu",	
});
	var navWindow = Ti.UI.iOS.createNavigationWindow({
		window: mainWindow,
	});

var weatherTable = Ti.UI.createTableView({
	top: navWindow.height + navWindow.top,
	backgroundImage: "Weather-Background.jpg"
});

if(Ti.Platform.name === "iPhone OS"){
	weatherTable.style = Ti.UI.iPhone.TableViewStyle.GROUPED;
	weatherTable.hasDetail = true;
};

var tabViewSection = Ti.UI.createTableViewSection({
	headerTitle: "Everyone talks about the weather..",
	footerTitle: "But nobody seems to do anything about it"
});

for(var i=0, j=menu.length; i<j; i++){
		var theRow = Ti.UI.createTableViewRow({
		title: menu[i].title,
		//desc: family[i].descripton,
		hasDetail: true
	});
	if(Ti.Platform.name === "iPhone OS"){
		theRow.hasChild = false;
		theRow.hasDetail = true;
	}
	
	familySection.add(theRow);

	weatherTable.add(theRow);

}

weatherTable.setData(menu);

mainWindow.add(createTableViewRow, tabViewSection, weatherTable);
mainWindow.open();
navWindow.open();