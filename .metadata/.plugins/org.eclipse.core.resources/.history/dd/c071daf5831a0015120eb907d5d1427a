Ti.UI.setBackgroundColor("fff");

//create a window to hold the Navigation window
var mainWindow = Ti.UI.createWindow({
	title: "Eric Wilson's Weather",
	backgroundImage: "Weather-Background.jpg"	
});
	var navWindow = Ti.UI.iOS.createNavigationWindow({
		window: mainWindow
	});

		var openLabel = Ti.UI.createLabel({
		  backgroundColor: 'white',
		  text: "Click to open up the Menu",
		  top: 250,
		  height: 100,
		  width: 300,
		  align: "center"
		});
		
		var basicSwitch = Ti.UI.createSwitch({
		  value:true,
		  top: openLabel.top + 20 // mandatory property for iOS 
		});
		
		basicSwitch.addEventListener('change',function(e){
		  Ti.API.info('Switch value: ' + basicSwitch.value);
		});


// print initial value
Ti.API.info('Switch value: ' + basicSwitch.value);

//add the label, open the main window
navWindow.add(win, basicSwitch);
navWindow.open();
